<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_row_border"
    android:id="@+id/twit_row"
    android:clickable="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="6dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twit_img_read"
                android:src="@android:drawable/presence_invisible"
                android:contentDescription="@string/imgdesc_read" />

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    tools:text="JeanMichMich"
                    android:id="@+id/twit_txt_name"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Il y a 17 heures"
                    android:id="@+id/twit_txt_time"
                    android:textSize="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:text="@MichMichJean Twit content message"
                android:id="@+id/twit_txt_content"
                android:layout_weight="50"
                android:textSize="12dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"/>

        <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="/forum.php?action=viewtopic!topicid=6336"
                android:id="@+id/twit_txt_url"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:singleLine="true"/>-->
    </LinearLayout>
</TableRow>