<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_row_border"
    android:id="@+id/conversationmin_row"
    android:clickable="true">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conversationmin_img_mp"
            android:contentDescription="@string/imgdesc_read"
            android:src="@drawable/ic_launcher"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="6dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/conversationmin_img_read"
                android:src="@android:drawable/presence_invisible"
                android:contentDescription="@string/imgdesc_read" />

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    tools:text="JeanMichMich"
                    android:id="@+id/conversationmin_txt_pseudo"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Il y a une semaine"
                    android:id="@+id/conversationmin_txt_time"
                    android:textSize="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"/>

        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:text="HerpDerp Sujet MP"
                android:id="@+id/conversationmin_txt_subject"
                android:layout_weight="50"
                android:textSize="12dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>
</TableRow>