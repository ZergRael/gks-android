<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_row_border"
    android:id="@+id/pm_incoming_row"
    android:clickable="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="6dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pm_incoming_img_read"
                android:src="@android:drawable/presence_invisible"
                android:contentDescription="@string/imgdesc_read" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="JeanMichMich"
                    android:id="@+id/pm_incoming_txt_pseudo"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:text="HerpDerp incoming MP content"
                android:id="@+id/pm_incoming_txt_text"
                android:textSize="12dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Il y a 10 mois"
                android:id="@+id/pm_incoming_txt_time"
                android:textSize="12dp"
                android:layout_gravity="center_vertical|right"
                android:textColor="@android:color/darker_gray"
                android:paddingRight="20dp"/>

    </LinearLayout>
</TableRow>